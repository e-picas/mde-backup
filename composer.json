{
    "name": "piwi/markdown-extended",
    "type": "library",
    "description": "A PHP parser for the Markdown Extended syntax",
    "keywords": [ "markdown", "markdown extended", "mde" ],
    "homepage": "http://aboutmde.org/",
    "license": "BSD-3-Clause",
    "authors": [{
            "name": "John Gruber",
            "homepage": "http://daringfireball.net/"
        },{
            "name": "Michel Fortin",
            "homepage": "http://michelf.com/"
        },{
            "name": "Fletcher T. Penney",
            "homepage": "http://fletcherpenney.net/"
        },{
            "name": "Pierre Cassat",
            "homepage": "http://e-piwi.fr/"
    }],
    "support": {
        "issues": "http://github.com/piwi/markdown-extended/issues",
        "source": "http://github.com/piwi/markdown-extended/tree/master"
    },
    "require": {
      "php": ">=5.3.0",
      "symfony/console": "2.*"
    },
    "require-dev": {
        "sami/sami": "@stable",
        "phpunit/phpunit": "@stable",
        "phpmd/phpmd" : "@stable"
    },
    "replace": {
        "atelierspierrot/markdown-extended": "dev-master",
        "atelierspierrot/extended-markdown": "dev-master"
    },
    "autoload": { "psr-0": { 
        "MarkdownExtended": "src",
        "markdown": "src"
    } },
    "config": {
        "bin-dir": "bin"
    },
    "bin": [ "bin/markdown-extended", "man/markdown-extended.man", "man/markdown-extended-documentation.man" ],
    "extra": {
        "branch-alias": {
            "dev-master": "0.0.*-dev"
        }
    }
}
