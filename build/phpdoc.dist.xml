<?xml version="1.0" encoding="UTF-8" ?>
<phpdoc>
	<title>PHP Extended Markdown</title>
	<parser>
		<target>../phpdoc/</target>
		<default-package-name>PHP_Extended_Markdown</default-package-name>
		<visibility>public,protected</visibility>
		<markers>
			<item>TODO</item>
			<item>FIXME</item>
			<item>WIP</item>
			<item>formater_overload</item>
		</markers>
	</parser>
	<transformer>
		<target>../phpdoc/</target>
	</transformer>
	<files>
		<directory>../src</directory>
		<ignore>test/*</ignore>
		<ignore>build/*</ignore>
		<ignore>work/*</ignore>
		<ignore>.git/*</ignore>
	</files>
</phpdoc>